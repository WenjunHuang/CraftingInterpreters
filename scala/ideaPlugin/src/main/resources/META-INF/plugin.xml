<idea-plugin>
    <id>com.github.wenjunhuang.lox</id>
    <name>Lox Language</name>
    <vendor>WenjunHuang</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Lox File" implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxFileType$"
                  fieldName="MODULE$" language="Lox" extensions="lox"/>
        <lang.parserDefinition language="Lox"
                               implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Lox"
                                       implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxSyntaxHighlighterFactory"/>
<!--        <annotator language="Lox" implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxAnnotator"/>-->
<!--        <highlightErrorFilter implementation="com.github.wenjunhuang.lox.ideaplugin.LoxHighlightErrorFilter"/>-->
        <lang.braceMatcher language="Lox" implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxBraceMatcher"/>
        <colorSettingsPage
                implementation="com.github.wenjunhuang.lox.ideaplugin.LoxColorSettingsPage"/>
        <configurationType implementation="com.github.wenjunhuang.lox.ideaplugin.execution.LoxRunConfigurationType"/>
<!--        <lang.commenter language="Lox" implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxCommenter"/>-->
<!--        <typedHandler implementation=""/>-->
        <!--        <lang.psiStructureViewFactory language="Lox"-->
        <!--                                      implementationClass="com.github.wenjunhuang.lox.ideaplugin.LoxStructureViewFactory"/>-->

    </extensions>

</idea-plugin>
